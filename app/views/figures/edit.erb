<h1><%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="post">
<input type="hidden" name="_method" value="patch">

  <label><h3>Edit Figure Name</h3></label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">

  <label><h3>Edit Figure Title(s)</h3></label>
  <ul style="list-style: none; padding: 5px;">
  <%@titles.each do |title|%>
    <li><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%></li>
  <%end%>
</ul>

  <label><h3>Or, create a new title</h3></label>
  <input type="text" name="title[name]" id="new_title">

  <label><h3>Edit Figure Landmark(s)</h3></label>
  <ul style="list-style: none; padding: 5px;">
  <%@landmarks.each do |landmark|%>
    <li><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%></li>
  <%end%>
  </ul>

  <label><h3>Or, create a new landmark</h3></label>
  <label><p>Landmark Name</p></label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label><p>Year Completed</p></label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed">
  <br>
  <br>
  <input type="submit" value="Edit Figure">
</form>
