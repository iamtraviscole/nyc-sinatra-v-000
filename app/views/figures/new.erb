<h1>New Figure</h1>

<form action="/figures" method="post">

  <label><h3>Figure Name</h3></label>
  <input type="text" name="figure[name]" id="figure_name">

  <label><h3>Figure Title(s)</h3></label>
  <ul style="list-style: none; padding: 5px;">
  <%@titles.each do |title|%>
    <li><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></li>
  <%end%>
</ul>

  <label><h3>Or, create a new title</h3></label>
  <input type="text" name="title[name]" id="new_title">

  <label><h3>Figure Landmark(s)</h3></label>
  <ul style="list-style: none; padding: 5px;">
  <%@landmarks.each do |landmark|%>
    <li><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></li>
  <%end%>
  </ul>

  <label><h3>Or, create a new landmark</h3></label>
  <label><p>Landmark Name</p></label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label><p>Year Completed</p></label>
  <input type="text" name="landmark[year_completed]" id="new_landmark_year_completed">
  <br>
  <br>
  <input type="submit" value="Create New Figure">
</form>
